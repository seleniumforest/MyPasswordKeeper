<Window x:Class="MyPasswordKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
        xmlns:local="clr-namespace:MyPasswordKeeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Button Content="Open" Click="OpenButton_Click" Margin="0 0 10 0" Padding="10" />
                <Label Content="Password" VerticalAlignment="Center" />
                <TextBox MinWidth="250" x:Name="PasswordTextBox" Margin="0 0 10 0" />
                <Button Content="Save" Click="SaveButton_Click" Margin="0 0 10 0" Padding="10" />
                <Label x:Name="StatusLabel" />
            </StackPanel>
            <DataGrid x:Name="mainGrid" MinColumnWidth="250"/>
        </StackPanel>
    </Grid>
</Window>
